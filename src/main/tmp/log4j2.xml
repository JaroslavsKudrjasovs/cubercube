<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="org.apache.logging.log4j.core.appender" status="WARN">

    <Properties>
        <Property name="CONSOLE_PATTERN">%d{HH:mm:ss.SSS} %highlight{%-5level}{WARN=bright yellow, INFO=blue, DEBUG=black, TRACE=white, TESTPASSED=bright green reverse, TESTFAILED=bright red reverse} %highlight{%msg }{WARN=bright yellow, INFO=normal, DEBUG=white, TRACE=white, TESTPASSED=normal, TESTFAILED=normal}%style{[%c{2}:%L]}{white}%n</Property>
        <Property name="TESTNG_PATTERN">%d{HH:mm:ss.SSS} %testnglevel %replace{%encode{%msg}}{\\r\\n|\\n}{&lt;BR&gt;} [%c{2}:%L]%n</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${CONSOLE_PATTERN}" disableAnsi="false"/>
        </Console>
        <AbstractAppender name="AbstractAppender">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${TESTNG_PATTERN}" disableAnsi="true"/>
        </AbstractAppender>
    </Appenders>

    <TestNGLayout/>

    <Loggers>
        <Root additivity="false" level="trace"> <!-- change to debug or info to decrease verbosity -->
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AbstractAppender"/>
        </Root>
        <logger additivity="false" level="off" name="org.apache.commons.httpclient"/>
        <logger additivity="false" level="off" name="httpclient.wire"/>
        <logger additivity="false" level="off" name="org.apache.http"/>
        <logger additivity="false" level="off" name="org.apache.http.headers"/>
        <logger additivity="false" level="off" name="org.apache.http.wire"/>
    </Loggers>

</Configuration>
